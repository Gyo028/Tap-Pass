<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purps_bg">

    <TextView
        android:id="@+id/spendingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usage Summary"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        android:paddingStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/timerCard"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_below="@id/spendingTitle"
        app:cardBackgroundColor="#2A2A2A"
        app:cardCornerRadius="15dp"
        app:cardElevation="8dp"
        android:layout_marginHorizontal="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:id="@+id/pcStatusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OFFLINE"
                android:textColor="#AAAAAA"
                android:letterSpacing="0.1"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/timerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:textColor="#FFFFFF"
                android:textSize="54sp"
                android:textStyle="bold"
                android:fontFamily="monospace"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remaining Time"
                android:textColor="#888888"
                android:textSize="12sp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="2">

                <TextView
                    android:id="@+id/currentBalanceText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Balance: ₱0.00"
                    android:textColor="#00E676"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="20dp"
                    android:background="#444444"/>

                <TextView
                    android:id="@+id/itemEstimatedCost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Est. Cost: ₱0.00"
                    android:textColor="#FFD600"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/wirelessLogoutButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/timerCard"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:text="WIRELESS LOGOUT"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:backgroundTint="#FF5252"
        app:icon="@drawable/ic_logout"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:elevation="4dp"/>

    <TextView
        android:id="@+id/historyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wirelessLogoutButton"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Past Sessions"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/historyRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/historyLabel"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="8dp"
        android:clipToPadding="false"
        tools:listitem="@android:layout/simple_list_item_2" />

</RelativeLayout>